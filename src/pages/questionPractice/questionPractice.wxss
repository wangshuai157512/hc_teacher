@import "../common/vendor.wxss";
@import "../common/common.wxss";

Page {
    width: 100%;
    height: 100%;
    background: linear-gradient(177deg, #f1f4ff 0%, #fffeff 100%);
  }
  .title {
    font-size: 30rpx;
    color: #2E3033;
  }
  .level-ele {
    width: 100%;
    height: 20rpx;
    background-color: #f1f5f9;
  }
  .block-ele {
    width: 100%;
    height: 20rpx;
    background-color: #F1F5F9;
  }
  .title-content {
    box-sizing: border-box;
    padding: 45rpx 50rpx 30rpx;
  }
  .question-item {
    box-sizing: border-box;
    background-color: #F1F5F9;
  }
  .swiper-item-style {
    background: linear-gradient(139deg, #f1f4ff 0%, #fffeff 100%);
    box-shadow: 0 12rpx 20rpx 0 rgba(230, 230, 230, 0.5);
  }
  .answer-sheet.answer-sheet_show {
    opacity: 0;
    transform: translateY(100%);
  }
  .answerContainer {
    display: flex;
    flex-direction: column;
    background-color: #FAFAFA;
    height: 100vh;
  }
  .question-view {
    height: calc(100% - 90rpx);
  }
  .topic-type-text {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 210rpx 0 32rpx;
    color: #2E3033;
    font-weight: bold;
  }
  .question-summary {
    font-size: 28rpx;
    color: #667180;
    line-height: 1.8;
    text-align: center;
  }
  .question-summary__total-points {
    margin-left: 30rpx;
    font-size: 26rpx;
    color: #CFD4DC;
    font-weight: 200;
  }
  .question-summary__gesture {
    position: absolute;
    right: 323rpx;
    top: 529rpx;
    width: 105rpx;
    height: 139rpx;
    transform: rotate(0deg);
    transition: all .5s linear;
  }
  .question-summary__gesture ._img {
    width: 100%;
    height: 100%;
  }
  .question-summary__gesture.is-rotate {
    transform: rotate(-12deg);
  }
  .question-summary__text {
    font-family: 'FZZhanBiHei-M22S';
    font-size: 32rpx;
    color: #98A1AE;
    position: absolute;
    top: 710rpx;
    left: 231rpx;
  }
  .answer-card-box {
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 -6rpx 10rpx 0 rgba(230, 230, 230, 0.5);
  }
  .answer-card-box > .time-box {
    width: 120rpx;
    height: 50rpx;
    padding: 0 18rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #fff;
    text-align: center;
    background-color: #CFD4DC;
    border-radius: 10rpx;
  }
  .answer-card-box > .card-img {
    position: absolute;
    right: 80rpx;
    width: 50rpx;
    height: 50rpx;
  }
  .answer-card-box > .card-img ._img {
    width: 100%;
    height: 100%;
  }
  .question-header-box {
    padding: 100rpx 50rpx 0;
    background-color: #fff;
  }
  .question-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 18rpx;
    border-bottom: 2rpx solid #f1f5f9;
  }
  .question-header > .question-title {
    font-size: 28rpx;
    color: #667180;
  }
  .question-header .question-length {
    margin-left: 30rpx;
  }
  .question-header .question-length .question-index {
    color: #3083EF;
  }
  .question-header .question-length .question-count {
    color: #666;
  }
  .question-header .question-length ._span {
    font-size: 26rpx;
    font-weight: 200;
  }
  .answer-sheet {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: #fff;
    opacity: 1;
    transform: translateY(0);
    transition: transform .3s, opacity .3s;
  }
  .answer-sheet .answer-sheet-view {
    height: calc(100% - 100rpx);
  }
  .answer-sheet .section {
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
    font-size: 29rpx;
    font-weight: 500;
    color: #5f6e75;
  }
  .answer-sheet .section .question-name {
    text-align: left;
    font-size: 30rpx;
    color: #464d5c;
    margin: 0 30rpx;
  }
  .answer-sheet .section .rows {
    display: flex;
    flex-wrap: wrap;
    text-align: center;
  }
  .answer-sheet .section .rows .row-wrap {
    display: flex;
    width: 20vw;
    height: 15vw;
    align-items: center;
    justify-content: center;
  }
  .answer-sheet .section .rows .row-wrap .row.default {
    color: #667891;
    background-color: #fff;
    border: 1rpx solid #c2c2c2;
  }
  .answer-sheet .section .rows .row-wrap .row.selected {
    color: #fff;
    background-color: #3083EF;
  }
  .answer-sheet .section .rows .row-wrap .row.error {
    color: #fff;
    background-color: #f46077;
  }
  .answer-sheet .section .rows .row-wrap .row {
    height: 70rpx;
    width: 70rpx;
    border-radius: 35rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    box-sizing: border-box;
  }
  .answer-sheet-actions {
    display: flex;
    width: 100%;
    height: 100rpx;
  }
  .answer-sheet-actions {
    flex: 1;
    height: 100rpx;
    font-size: 36rpx;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    background-color: #3083EF;
  }
  .answer-sheet-action {
    font-size: 36rpx;
  }
  .answer-sheet-action_default {
    flex: 1;
    box-sizing: border-box;
    color: #3083EF;
    border-top: 1rpx solid #F0F0F0;
    background-color: #FFFFFF;
  }
  .answer-sheet-jiaojuan {
    width: 50%;
    font-size: 36rpx;
  }
  .questionItem-title {
    width: 100%;
    font-family: Helvetica, sans-serif;
    font-size: 28rpx;
    color: #666;
    line-height: 1.8;
  }
  .question-title-box {
    box-sizing: border-box;
    min-height: 100%;
    padding-bottom: 40rpx;
  }
  .alert-view {
    z-index: 99999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    background: linear-gradient(177deg, #f1f4ff 0%, #fffeff 100%);
    padding: 30rpx;
    box-sizing: border-box;
  }
  .alert-view .course-content {
    position: relative;
    border-radius: 12rpx;
    height: 100%;
    box-shadow: 0 8rpx 40rpx 0 rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .alert-view .course-content .course-info-img {
    text-align: center;
    padding: 98rpx 240rpx 61rpx;
  }
  .alert-view .course-content .course-info-img ._img {
    width: 210rpx;
    height: 183rpx;
  }
  .alert-view .course-content .course-info-box {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .alert-view .course-content .course-info-box .course-box {
    display: inline-flex;
    flex-direction: column;
  }
  .alert-view .course-content .course-info-box .course-title {
    width: 100%;
    box-sizing: border-box;
    text-align: center;
    padding: 0 95rpx;
  }
  .alert-view .course-content .course-info-box .course-info {
    display: flex;
    text-align: left;
  }
  .alert-view .course-content .start-btn {
    width: 526rpx;
    height: 80rpx;
    background: linear-gradient(to right, #64A7FF, #3083EF);
    text-align: center;
    line-height: 80rpx;
    border-radius: 200rpx;
    position: absolute;
    bottom: 129rpx;
  }
  .question-title-text {
    font-size: 32rpx;
    color: #464D5C;
    padding-bottom: 40rpx;
  }
  .answer-item {
    display: flex;
    margin-bottom: 50rpx;
    align-items: center;
  }
  .answer-item .answer-item-default.alphabet-item {
    color: #464D5C;
    background-color: #F0F0F0;
  }
  .answer-item .answer-item-selected.alphabet-item {
    color: #fff;
    background-color: #3083EF;
  }
  .answer-item .answer-item-error.alphabet-item {
    color: #fff;
    background-color: #F46077;
  }
  .answer-item .alphabet-item {
    width: 60rpx;
    height: 60rpx;
    margin: 0 30rpx 0 0;
    font-size: 24rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 30rpx;
  }
