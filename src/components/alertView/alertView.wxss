@import "../../pages/common/common.wxss";
@import "../../pages/common/vendor.wxss";
.alert-view{
    z-index: 99999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    background:linear-gradient(177deg,rgba(241,244,255,1) 0%,rgba(255,254,255,1) 100%);
    padding: 30rpx;
    box-sizing: border-box;
  }
  .course-content{
    position: relative;
    border-radius: 6px;
    height: 100%;
    box-shadow:0px 4px 20px 0px rgba(0,0,0,0.06);
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .course-info-img{
    text-align: center;
    padding: 98rpx 240rpx 61rpx;
    
  }
  .course-info-img image {
      width: 210rpx;
      height: 183rpx;
    }
  .course-info-box{
    display: flex;
    flex-direction: column;
    align-items: center;
    
  }
  .course-box{
    display: inline-flex;
    flex-direction: column;
  }
  .course-title{
    width: 100%;
    box-sizing: border-box;
    text-align: center;
    padding: 0 95rpx;
  }
  .course-info{
    display: flex;
    text-align: left;
  }
  .start-btn{
    width: 526rpx;
    height: 80rpx;
    background: linear-gradient(to right,#64A7FF,#3083EF);
    text-align: center;
    line-height: 80rpx;
    border-radius: 100px;
    position: absolute;
    bottom: 129rpx;
  }