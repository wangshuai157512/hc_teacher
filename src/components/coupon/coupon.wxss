@import "../../pages/common/common.wxss";

.coupon-item{
    position: relative;
}
.bgc-img {
    position: absolute;
    top: 0;
    right: 0;
    width: 70px;
    height: 65px;
}
.bgc-img image{
    width: 100%;
    height: 100%;
}
.coupon-content {
    position: relative;
    width: 100%;
    height: 164rpx;
    background-size: 100%;
    border-top-left-radius: 12rpx;
    border-top-right-radius: 12rpx;
    display: flex;
}
.coupon-content .coupon-price {
    width: 191rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-right: 2rpx dashed #fff;
}
.coupon-content .course-coupon {
    flex: 1;
}
.coupon-content .course-coupon .course-name {
    height: 100%;
    display: flex;
    flex-direction: column;
    /*align-items: center;*/
    justify-content: center;
}
.coupon-content .use-coupon {
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    width: 126rpx;
    height: 56rpx;
    border: 2rpx solid white;
    border-radius: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 5;
}
.coupon-content .coupon-bgc {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 6rpx;
}
.use-rules {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 55rpx;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;

}
.coupon-shadow {
    box-shadow:0px 4px 20px 0px rgba(0,0,0,0.06);
}
.rules-coupon{
    box-shadow:0px 4px 20px 0px rgba(0,0,0,0.06);
}
.use-rules .use-rules-text {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.use-rules .use-rules-text .arrow {
    width: 28rpx;
    height: 28rpx;
}
.use-rules-box {
    position: relative;
    left: 0;
    top: -4rpx;
    width: 100%;
    border-bottom-left-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
}
.coupon-price {
    font-size: 30rpx;
}
.coupon-content.bgc-default {
    background: #C2C2C2;
}
.coupon-content.bgc-blue {
    background: linear-gradient(to right, #64A7FF, #3083EF);
}
.coupon-content.bgc-green {
    background: linear-gradient(to right, #6ADAAF, #35B685);
}
.coupon-content.bgc-orange {
    background: linear-gradient(to right, #FFA826, #FF7700);
}

.coupon-content.bgc-lightblue {
    background: linear-gradient(to right, #4DC5FB, #009ADF);
}
.expirationTime{
    font-family: Arial;
}
