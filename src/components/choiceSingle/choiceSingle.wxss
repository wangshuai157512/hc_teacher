@import "../../pages/common/common.wxss";
@import "../../pages/common/vendor.wxss";
.question-title-text{
  font-size: 34rpx;
  color: #2E3033;
  padding: 40rpx 50rpx 30rpx;
  font-weight: bold;
}
.parser-text {
  font-family:Helvetica, sans-serif;
  font-size:34rpx;
}
.parser-answer{
  font-size: 30rpx;
}
.parser-text.parser-title{
  font-weight: bold;
}
.answer-list-box{
  box-sizing: border-box;
  padding: 0 50rpx ;
  background-color: #fff; 
}
image {
  width: 150rpx;
}
/* .answer-list {
 
} */
.answer-list .answer-item-selected-style {
  border:1px solid rgba(127,200,255,1);
}
.answer-item{
  margin-bottom: 24rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 20rpx 0px rgba(0,0,0,0.06);
  border-radius:10rpx;
  border: 1px solid transparent;
}
.answer-item-content{
  display: flex;
  align-items: center;
  padding: 35rpx 0 35rpx 30rpx;
}
.answer-item-default.alphabet-item {
  color: #3083EF;
  background-color: #F0F0F0;
}
.answer-item-selected.alphabet-item {
  color: #fff;
  background-color: #3083EF;
}
.answer-item-error.alphabet-item {
  color: #fff;
  background-color: #F46077;
}
.alphabet-item{
  width: 60rpx;
  height: 60rpx;
  margin: 0 30rpx 0 0;
  font-size: 24rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
}